<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#282828"
    android:paddingTop="24dp">

    <!-- Header Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Canvas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <!-- 1. NEW CANVAS BUTTON -->
    <Button
        android:id="@+id/button_new_canvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Canvas"
        android:textColor="@android:color/black"
        android:backgroundTint="@android:color/white"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:padding="12dp"/>

    <!-- NEW: RENAME CURRENT CANVAS BUTTON -->
    <Button
        android:id="@+id/button_rename_canvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rename Current Canvas"
        android:textColor="@android:color/black"
        android:backgroundTint="#FFC107"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"/>

    <!-- 2. RECYCLER VIEW FOR SAVED CANVASES -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/canvas_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp"/>

</LinearLayout>
